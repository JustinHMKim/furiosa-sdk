#!/usr/bin/env python

import sys
import os

if os.environ.get('LC_CTYPE', '') == 'UTF-8':
    os.environ['LC_CTYPE'] = 'en_US.UTF-8'

import quantizer.scripts

if __name__ == '__main__':
    try:
        quantizer.scripts.main()
    except Exception as e:
        if os.environ.get('QUANTIZER_DEBUG', None) is not None:
            raise e
        else:
            print(e, file=sys.stderr)
            sys.exit(-1)
